# ==================== DATABASE ====================
# Render PostgreSQL External URL
DATABASE_URL=postgresql://username:password@hostname.render.com/database_name

# ==================== SERVER ====================
# Optional: set a port for local testing
PORT=3001

# ==================== JWT ====================
# Secret key for JWT tokens (generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=your-secret-key-change-in-production

# ==================== TELEGRAM ====================
# Your Telegram Bot Token from @BotFather
BOT_TOKEN=your-telegram-bot-token

# ==================== ENCRYPTION (AES-256) ====================
# 32-byte hex key for AES-256-GCM encryption (generate with: node generate-keys.js)
ENCRYPTION_KEY=your-32-byte-hex-key-here

# ==================== SIGNATURE KEYS (RSA) ====================
# Client public key for verifying client signatures (generate with: node generate-keys.js)
CLIENT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\nYOUR_CLIENT_PUBLIC_KEY_HERE\n-----END PUBLIC KEY-----"

# Server private key for signing server responses (generate with: node generate-keys.js)
SERVER_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_SERVER_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----"

# Server public key for client to verify server signatures (generate with: node generate-keys.js)
SERVER_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\nYOUR_SERVER_PUBLIC_KEY_HERE\n-----END PUBLIC KEY-----"

# ==================== CORS ====================
# Frontend URL for CORS whitelist (comma-separated for multiple)
FRONTEND_URL=https://your-domain.com

# ==================== NOTES ====================
# To generate all keys at once, run:
#   cd monkey-flipper-api
#   node generate-keys.js
#
# Then copy the output to this .env file

